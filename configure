#!/usr/bin/env bash

# A hach to restart the script with Bash
if [ -z "$BASH" ]; then exec bash "$0" "$@"; fi

set -eu
set -o pipefail

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" >/dev/null 2>&1 && pwd -L | sed 's://:/:g')"
PREFIX=
USE_SYSTEM_TBLIS=0

download_tblis() {
  mkdir -p "${SCRIPT_DIR}/third_party"
  cd "${SCRIPT_DIR}/third_party"

  if [ ! -d "tblis" ]; then
    git clone --depth=1 "https://github.com/devinamatthews/tblis.git"
  fi
  cd tblis
  # git checkout 14d7825b0d93ca6df9cf0e1c9f2c96261e5897e9
}

build_tblis() {
  cd "${SCRIPT_DIR}/third_party/tblis"
  if [ ! -f "Makefile" ]; then
    ./configure \
      --enable-thread-model=pthread \
      --enable-config=haswell \
      --prefix="$PREFIX"
  fi
  make -j"$(nproc --all)"
}

test_tblis() {
  cd "${SCRIPT_DIR}/third_party/tblis"
  ./bin/test
}

install_tblis() {
  cd "${SCRIPT_DIR}/third_party/tblis"
  make install
  rm -f "${PREFIX}/lib"/*.la
  rm -f "${PREFIX}/lib"/*.so*
}

generate_buildinfo() {
  cat <<-EOF
include-dirs:
    ${PREFIX}/include
extra-lib-dirs:
    ${PREFIX}/lib
extra-libraries:
    tblis
    tci
    stdc++
    atomic
    gomp
    pthread
EOF
}

parse_options() {
  for i in "$@"; do
    case $i in
    --libdir=*)
      # PREFIX="${i#*=}"
      shift # past argument=value
      ;;
    --use-system-tblis)
      USE_SYSTEM_TBLIS=1
      shift # past argument with no value
      ;;
    CC=*)
      export CC="${i#*=}"
      shift
      ;;
    CXX=*)
      export CXX="${i#*=}"
      shift
      ;;
    *) shift ;;
    esac
  done
  if [ -z "$PREFIX" ]; then
    PREFIX=${SCRIPT_DIR}/third_party/install
  fi
}

main() {
  export CFLAGS="-O0 -DNDEBUG -fPIC"
  export CXXFLAGS="-O0 -DNDEBUG -fPIC"
  PREFIX=$(pwd)
  echo "Using PREFIX=$PREFIX..."
  parse_options "$@"
  if [ $USE_SYSTEM_TBLIS -eq 0 ]; then
    echo "Downloading TBLIS..."
    download_tblis
    echo "Building TBLIS..."
    build_tblis
    # echo "Testing TBLIS..."
    # test_tblis
    echo "Installing TBLIS..."
    install_tblis
  fi
  echo "Generating buildinfo..."
  generate_buildinfo >"$PREFIX/tblis-hs.buildinfo"
}

# echo "$SCRIPT_DIR"
main "$@"
